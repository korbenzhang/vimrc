" basic func for vim.
" ---------------------

function! IsInDos()
	return has("win32") && !has("gui_running")
endfunction

function! IsInWinGui()
	return has("win32") && has("gui_running")
endfunction

function! IsInUnixGui()
	return has("unix") && has("gui_running")
endfunction

function! IsInUnixConsole()
	return has("unix") && !has("gui_running")
endfunction

" cygwin
function! IsInWinUnix()
	return has("win32unix")
endfunction

function! IsInXterm()
	return &term =~ "xterm"
endfunction

" make dir for both windows and unix.
function! MkDir()

endfunction


