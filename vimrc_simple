set nocompatible

let mapleader = ","
let g:mapleader = ","

" vundle support
" ========================
filetype on
filetype plugin on
filetype indent on

source ~/.vim/confs/init_vundle_vimrc

set rtp+=~/.vim/confs/bundle/vundle/
call vundle#rc()
Bundle 'gmarik/vundle'

source ~/.vim/confs/used_bundles_simple_vimrc

source ~/.vim/confs/options_vimrc
source ~/.vim/confs/encoding_vimrc
source ~/.vim/confs/tab_indent_vimrc
source ~/.vim/confs/backup_vimrc
source ~/.vim/confs/swap_vimrc
source ~/.vim/confs/au_vimrc
source ~/.vim/keymap/all_vimrc
source ~/.vim/confs/iab_vimrc
"source ~/.vim/confs/paste_vimrc
source ~/.vim/confs/syntax_vimrc
source ~/.vim/confs/display_vimrc
source ~/.vim/confs/complete_vimrc

" some gui features
source ~/.vim/confs/gui_running_vimrc

" some windows features
source ~/.vim/confs/win32_vimrc

source ~/.vim/confs/highlight_vimrc
source ~/.vim/confs/omnifunc_vimrc

source ~/.vim/pluginrc/omni_complete_vimrc
source ~/.vim/pluginrc/tlist_vimrc
source ~/.vim/pluginrc/snipmate_vimrc
source ~/.vim/pluginrc/nerdtree_vimrc
