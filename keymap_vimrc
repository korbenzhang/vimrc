" Keymap
" ========================
source $HOME/.vim/keymap_vimrc_vimrc
source $HOME/.vim/keymap_moveline_vimrc
source $HOME/.vim/keymap_spell_vimrc
source $HOME/.vim/keymap_tab_vimrc
source $HOME/.vim/keymap_windows_vimrc
source $HOME/.vim/keymap_quickfix_vimrc
"source $HOME/.vim/keymap_grep_vimrc
source $HOME/.vim/keymap_make_vimrc

source $HOME/.vim/keymap_alt_tabwin_vimrc			"keys for alt
source $HOME/.vim/keymap_malt_tabwin_vimrc			"keys for meta
source $HOME/.vim/keymap_ctrl_tabwin_vimrc			"keys for ctrl
source $HOME/.vim/keymap_leader_tabwin_vimrc		"keys for leader

"source $HOME/.vim/arrowkey_vimrc					"arrow key map
source $HOME/.vim/keycmap_vimrc						"keys for cmap

nmap <silent> <esc><esc> :noh<cr>
" Don't use Ex mode, use Q for formatting
map  Q gq

"map j gj
"map k gk

"nmap <SPACE> <C-F>

nmap <leader>sr :silent !
map  <leader>bd :Bclose<cr>
map  <leader>cd :cd %:p:h<cr>
map  <leader>n :cn<cr>
map  <leader>p :cp<cr>
" delete ^M
map  <leader>dm :%s///g<cr>
map  <leader>ds :%s/\s\+$//g<cr>
" sudo save
map  <leader>sw :w !sudo tee %<cr>
map  <leader>. :e .<cr>
map  <leader>w :w!<cr>
map  <leader>q :bd<cr>
map  <leader>s :update<cr>
map  <leader>sh :shell<cr>
nmap <leader>f :find<cr>
" run line
map  <leader>rl <ESC>:.w !bash<CR>
" run file
map  <leader>rf <ESC>:! "%"<CR>
