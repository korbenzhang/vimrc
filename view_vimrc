" view
" ========================

set viewdir=$HOME/rundata/vim/views/

let view_dir=expand('$HOME/rundata/vim/views')

if !isdirectory(view_dir)
	if has("win32")
		silent exec "!md ".$HOME."\\rundata\\vim\\views"
	else
		silent !mkdir -p ~/rundata/vim/views
	endif
endif

"autocmd BufWinLeave * mkview
"autocmd BufWinEnter * "silent loadview"
