" gui running settings.
" ======================

if !has("gui_running")
	finish
endif

"Gui options egmLt
"set guioptions=egm
set go-=T
set go-=r

if has("gui_win32")
	"set guifont=Monaco:h11
	set guifont=Consolas:h13
elseif has("gui_gtk2")
	set guifont=Bitstream\ Vera\ Sans\ Mono\ 13
	"set guifont=Monaco\ 13
	"set guifontwide=WenQuanYi_Bitmap_Song\ 13
elseif has("gui_macvim")
	"I have no Mac, so i donot know it can work properly or not.
	set guifont=Monaco:h13
end

"set cursorline
"noremap <M-Space> :simalt ~<CR>
"inoremap <M-Space> <C-O>:simalt ~<CR>
"cnoremap <M-Space> <C-C>:simalt ~<CR>

" maximize windows when startup
if has("gui_win32")
	au GUIEnter * simalt ~x
endif

if has("gui_gtk2")
	
	"need wmctl
	"if !executable('wmctrl')
		"sudo apt-get install wmctrl
	"endif
	
	if executable('wmctrl') && has("gui_running")
		source $HOME/.vim/full_screen_gtk_vimrc
	endif

endif
