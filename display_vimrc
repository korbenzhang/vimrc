" display
" =====================

"set number
set ruler

"set linespace=0

" set color column
"set cc=80

"set wrapmargin=10

" Status Line
" 0 for none.
" 2 always.
set laststatus=2

" backspace and cursor keys wrap to previous/next line
set backspace=indent,eol,start
set whichwrap+=b,s,h,l,<,>,[,]
"set whichwrap+=<,>,h,l,[,]

" Line break
"Do not redraw, when running macros.. lazyredraw
"set showbreak=...

" warp line by words
set linebreak   

"How many tenths of a second to blink
set mat=2

" display
set display=lastline

" Cmd
"set cmdheight=1

" show some symble
if has("ambiwidth")
    set ambiwidth=double
endif

" Turn off welcome page
set shortmess=atI


" list toggle.
"set list
"set nolist

"set lcs=tab:>-,trail:-,nbsp:%
"set lcs=tab:>-,eol:<,nbsp:%
"set lcs=extends:>,precedes:<
"set listchars=tab:▸\ ,trail:-,nbsp:~,eol:¬
"set listchars=tab:▸\

"set background=dark
