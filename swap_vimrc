" swapdir
" ============

" if not exist swap dir, create one.
let swap_dir=expand('$HOME/rundata/vim/swap/')

if !isdirectory(swap_dir)
	if has("win32")
		silent exec "!mkdir ".$HOME."\\rundata\\vim\\swap"
	else
		silent !mkdir $HOME/rundata/vim/swap
	endif
endif

" set wrap dir
set dir=$HOME/rundata/vim/swap

set swapfile

