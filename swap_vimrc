" swapdir
" ============

" if not exist swap dir, create one.
let swap_dir=expand('$HOME/rundata/vim/')

if !isdirectory(swap_dir)
	if has("win32")
		silent exec "!mkdir ".$HOME."\\rundata\\vim"
	else
		silent !mkdir $HOME/rundata/vim
	endif
endif

" set wrap dir
set dir=$HOME/rundata/vim/

set noswapfile

