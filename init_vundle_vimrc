" init vundle
" ===========================

" if no vundle, git clone it
let iCanHazVundle=1

let vundle_readme=expand('$HOME/.vim/bundle/Vundle.vim/README.md')
let bundle_dir=expand('$HOME/.vim/bundle/')

if !filereadable(vundle_readme)
	echo "Installing Vundle.."
	echo ""
	
	if !isdirectory(bundle_dir)
		silent !mkdir $HOME/.vim/bundle
	endif

    silent !git clone https://github.com/gmarik/Vundle.vim.git $HOME/.vim/bundle/Vundle.vim
    let iCanHazVundle=0
endif

" vundle support
" ========================
filetype off

set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()

" let Vundle manage Vundle, required
Plugin 'gmarik/Vundle.vim'

