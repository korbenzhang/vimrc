" override
"

source ~/.vim/cursor_vimrc						"change cursor when in insert mode.

"set noautochdir

"au BufWritePre * execute ':%s/\s\+$//g'
"au BufWritePre * execute ":s/\s*$//"
"au BufWritePre * sil %s/\s\+$//e

"colo default

if has("gui_running") && has("gui_win32")
	set guifont=Monaco:h12
endif

"set nolist
"set vb t_vb=

"autocmd BufWritePost * call system("ctags -R")
"

set timeoutlen=200

"au FileType go setl makeprg=go\ build
if has("gui_running") && has("win32")
	"colo molokai
endif

if has("win32")
	"set shellpipe=> 
	"set shellpipe=\|\ tee
endif

highlight CursorLine cterm=NONE ctermbg=LightGreen ctermfg=NONE guibg=LightGray guifg=NONE
"autocmd BufEnter * nested :call tagbar#autoopen(0)
