" backupdir
" ====================================================
set backup

let backup_dir=expand('$HOME/rundata/vim/bak/')

if !isdirectory(backup_dir)
	if has("win32")
		silent exec "!md ".$HOME."\\rundata\\vim\\bak"
	else
		silent !mkdir $HOME/rundata/vim/bak
	endif
endif

set backupdir=$HOME/rundata/vim/bak

